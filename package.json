{
  "name": "cine-delices",
  "version": "1.0.0",
  "description": "Site de recettes inspirées du cinéma",
  "main": "app.js",
  "scripts": {
    "biome": "biome",
    "format": "biome format",
    "lint": "biome lint",
    "init-db": "node scripts/initDb.js",
    "reseed": "node scripts/reseed.js",
    "start": "NODE_ENV=production node app.js",
    "dev": "NODE_ENV=development nodemon app.js",
    "dev:css": "npx tailwindcss -i ./public/CSS/input.css -o ./public/CSS/output.css --watch",
    "setup-dev": "node scripts/initDb.js & npx tailwindcss -i ./public/CSS/input.css -o ./public/CSS/output.css --watch",
    "build:css": "npx tailwindcss -i ./public/CSS/input.css -o ./public/CSS/output.css --minify",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"

  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "memorystore": "^1.6.7",
    "method-override": "^3.0.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.4",
    "tailwindcss": "^3.4.17"
  }
}
