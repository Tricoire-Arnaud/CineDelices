<!-- Page de connexion -->
<div
  class="pic-header-login relative bg-cover bg-center bg-no-repeat min-h-screen flex items-center justify-center px-4"
>
  <div class="absolute inset-0 bg-black/30 backdrop-blur-[2px]"></div>

  <main
    class="relative bg-white/95 p-8 rounded-2xl shadow-xl w-full max-w-md backdrop-blur-sm"
  >
    <!-- En-tête -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-3">
        Content de te revoir !
      </h1>
      <p class="text-gray-600">
        Entrez vos identifiants pour accéder à votre compte
      </p>
    </div>

    <form action="/auth/login" method="POST" class="space-y-6">
      <!-- Email -->
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
          Adresse email
        </label>
        <div class="relative">
          <div
            class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
          >
            <svg
              class="h-5 w-5 text-gray-400"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"
              />
            </svg>
          </div>
          <input
            type="email"
            name="email"
            id="email"
            required
            class="pl-10 w-full px-4 py-2.5 bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all duration-300"
            placeholder="exemple@email.com"
          />
        </div>
      </div>

      <!-- Mot de passe -->
      <div>
        <label
          for="password"
          class="block text-sm font-medium text-gray-700 mb-1"
        >
          Mot de passe
        </label>
        <div class="relative">
          <div
            class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
          >
            <svg
              class="h-5 w-5 text-gray-400"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
              />
            </svg>
          </div>
          <input
            type="password"
            name="mot_de_passe"
            id="password"
            required
            class="pl-10 w-full px-4 py-2.5 bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all duration-300"
            placeholder="••••••••"
          />
        </div>
      </div>

      <!-- Options supplémentaires -->
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <input
            id="remember-me"
            name="remember-me"
            type="checkbox"
            class="h-4 w-4 text-orange-500 focus:ring-orange-500 border-gray-300 rounded"
          />
          <label for="remember-me" class="ml-2 block text-sm text-gray-700">
            Se souvenir de moi
          </label>
        </div>
        <a
          href="#"
          class="text-sm font-medium text-orange-500 hover:text-orange-600"
        >
          Mot de passe oublié ?
        </a>
      </div>

      <!-- Bouton de connexion -->
      <button
        type="submit"
        class="w-full flex justify-center py-3 px-4 bg-gradient-to-r from-orange-500 to-orange-600 text-white rounded-lg hover:from-orange-600 hover:to-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-all duration-300 font-medium shadow-md hover:-translate-y-0.5"
      >
        Se connecter
      </button>

      <!-- Lien d'inscription -->
      <p class="text-center text-sm text-gray-600">
        Vous n'avez pas de compte ?
        <a
          href="/auth/register"
          class="font-medium text-orange-500 hover:text-orange-600"
        >
          Inscrivez-vous
        </a>
      </p>
    </form>
  </main>
</div>
