<%- include('../partials/header') %>

<div class="max-w-6xl mx-auto px-4 py-8">
  
  <!-- Section Recettes Films en vedette -->
  <section>
    <h2 class="text-2xl font-semibold mb-4">Nos Recette de films récentes</h2>
      
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <% movieRecipes.forEach(recipe => { %>
        <div class="bg-gray-100 p-4 rounded-lg">
          <img src="/images/<%= recipe.image %>" alt="<%= recipe.titre %>" class="w-full h-32 object-cover rounded-md">
          <h4 class="mt-2 font-semibold text-gray-800"><%= recipe.titre %></h4>
          <p class="text-gray-500 text-sm"><%= recipe.date %></p>
        </div>
      <% }) %>
    </div>
    <button class="mt-4 bg-blue-500 text-white px-4 py-2 rounded-md">Plus</button>
  </section>

  <!-- Section Recettes Séries en vedette -->
  <section class="mt-12">
    <h2 class="text-2xl font-semibold mb-4">Nos Recette de séries récentes</h2>
       <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <% tvShowRecipes.forEach(recipe => { %>
        <div class="bg-gray-100 p-4 rounded-lg">
          <img src="/images/<%= recipe.image %>" alt="<%= recipe.titre %>" class="w-full h-32 object-cover rounded-md">
          <h4 class="mt-2 font-semibold text-gray-800"><%= recipe.titre %></h4>
          <p class="text-gray-500 text-sm"><%= recipe.date %></p>
        </div>
      <% }) %>
    </div>
    <button class="mt-4 bg-blue-500 text-white px-4 py-2 rounded-md">Plus</button>
  </section>

</div>

  <%- include('../partials/footer') %>