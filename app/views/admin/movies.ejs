<!-- Gestion des films et séries (admin) -->
<%- contentFor('body') %> <%- include('../partials/flash') %>

<main class="bg-gray-100 min-h-screen py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-4">
      Gestion des Films & Séries
    </h1>

    <!-- Statistiques -->
    <div class="mb-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white rounded-lg shadow p-6">
          <p class="text-sm font-medium text-gray-600">Total Films & Séries</p>
          <p class="text-2xl font-semibold text-gray-900">
            <%= movies.length %>
          </p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
          <p class="text-sm font-medium text-gray-600">Films</p>
          <p class="text-2xl font-semibold text-gray-900">
            <%= movies.filter(m => m.type === 'film').length %>
          </p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
          <p class="text-sm font-medium text-gray-600">Séries</p>
          <p class="text-2xl font-semibold text-gray-900">
            <%= movies.filter(m => m.type === 'série').length %>
          </p>
        </div>
      </div>
    </div>

    <!-- Barre d'actions -->
    <div class="bg-white rounded-lg shadow mb-6 p-4">
      <div class="flex justify-between items-center">
        <input
          type="text"
          placeholder="Rechercher un film ou une série..."
          class="w-full max-w-md px-4 py-2 border rounded-lg"
        />
        <a
          href="/admin/films-series/ajouter"
          class="ml-4 px-4 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition-all duration-200 flex items-center"
        >
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4v16m8-8H4"
            />
          </svg>
          Ajouter une œuvre
        </a>
      </div>
    </div>

    <!-- Liste des films et séries -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <% if (movies && movies.length > 0) { %>
      <div class="divide-y divide-gray-200">
        <% movies.forEach(function(movie) { %>
        <div class="p-6 hover:bg-gray-50 transition-colors duration-200">
          <div class="flex justify-between items-center">
            <div>
              <h2 class="text-xl font-semibold text-gray-900">
                <%= movie.titre %>
              </h2>
              <div
                class="mt-1 flex items-center space-x-4 text-sm text-gray-500"
              >
                <span
                  class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= movie.type === 'film' ? 'bg-blue-100 text-blue-800' : 'bg-purple-100 text-purple-800' %>"
                >
                  <%= movie.type.charAt(0).toUpperCase() + movie.type.slice(1)
                  %>
                </span>
                <span><%= movie.annee %></span>
                <span
                  ><%= movie.recipes ? movie.recipes.length : 0 %>
                  recettes</span
                >
              </div>
              <p class="mt-2 text-sm text-gray-600 line-clamp-2">
                <%= movie.description %>
              </p>
            </div>
            <div class="flex gap-2">
              <a
                href="/admin/films-series/modifier/<%= movie.id_oeuvre %>"
                class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500"
              >
                <svg
                  class="w-4 h-4 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                  />
                </svg>
                Modifier
              </a>
              <form
                action="/admin/movies/<%= movie.id_oeuvre %>?_method=DELETE"
                method="POST"
                class="inline"
                onsubmit="return confirm('Voulez-vous vraiment supprimer cette œuvre ?')"
              >
                <button
                  type="submit"
                  class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
                >
                  <svg
                    class="w-4 h-4 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                    />
                  </svg>
                  Supprimer
                </button>
              </form>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <div class="p-6 text-center">
        <p class="text-gray-500 mb-4">Aucun film ou série disponible</p>
        <a
          href="/admin/films-series/ajouter"
          class="inline-flex items-center px-4 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition-all duration-200"
        >
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4v16m8-8H4"
            />
          </svg>
          Ajouter une œuvre
        </a>
      </div>
      <% } %>
    </div>
  </div>
</main>
