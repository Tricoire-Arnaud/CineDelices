<!-- Tableau de bord administrateur -->
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Tableau de bord</h1>

  <!-- Statistiques -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Utilisateurs -->
    <div class="bg-blue-500 text-white p-5 rounded-lg shadow">
      <h2 class="text-lg font-semibold">Utilisateurs</h2>
      <p class="text-3xl font-bold"><%= usersCount %></p>
    </div>

    <!-- Recettes -->
    <div class="bg-gray-500 text-white p-5 rounded-lg shadow">
      <h2 class="text-lg font-semibold">Recettes</h2>
      <p class="text-3xl font-bold"><%= recipesCount %></p>
    </div>

    <!-- Films & Séries -->
    <div class="bg-orange-500 text-white p-5 rounded-lg shadow">
      <h2 class="text-lg font-semibold">Films & Séries</h2>
      <p class="text-3xl font-bold"><%= moviesCount %></p>
    </div>
  </div>

  <!-- Actions rapides -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <a
      href="/admin/utilisateur"
      class="bg-white p-5 rounded-lg shadow hover:shadow-lg transition-shadow"
    >
      <h3 class="font-semibold mb-2">Gérer les utilisateurs</h3>
      <p class="text-gray-600">Voir et gérer les comptes utilisateurs</p>
    </a>

    <a
      href="/admin/recette"
      class="bg-white p-5 rounded-lg shadow hover:shadow-lg transition-shadow"
    >
      <h3 class="font-semibold mb-2">Gérer les recettes</h3>
      <p class="text-gray-600">Ajouter ou modifier des recettes</p>
    </a>

    <a
      href="/admin/films-series"
      class="bg-white p-5 rounded-lg shadow hover:shadow-lg transition-shadow"
    >
      <h3 class="font-semibold mb-2">Gérer les films & séries</h3>
      <p class="text-gray-600">Ajouter ou modifier des œuvres</p>
    </a>

    <a
      href="/admin/categories"
      class="bg-white p-5 rounded-lg shadow hover:shadow-lg transition-shadow"
    >
      <h3 class="font-semibold mb-2">Gérer les catégories</h3>
      <p class="text-gray-600">Gérer les catégories de recettes</p>
    </a>
  </div>
</div>
