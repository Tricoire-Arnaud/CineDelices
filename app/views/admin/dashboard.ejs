<%- contentFor('body') %>

<!-- Contenu principal -->
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="max-w-7xl mx-auto px-4">
    <!-- En-tête avec animation -->
    <div
      class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 animate-fade-in gap-4"
    >
      <div>
        <h1
          class="text-2xl sm:text-4xl font-bold text-gray-900 bg-clip-text text-transparent bg-gradient-to-r from-orange-600 to-orange-400"
        >
          Tableau de bord
        </h1>
        <p class="mt-2 text-sm text-gray-600">
          Vue d'ensemble de votre plateforme
        </p>
      </div>
      <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4">
        <div
          class="bg-white p-2 rounded-lg shadow-sm flex items-center space-x-2"
        >
          <svg
            class="w-5 h-5 text-orange-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
          <span class="text-sm text-gray-600">
            <%= new Date().toLocaleString('fr-FR') %>
          </span>
        </div>
        <button
          onclick="window.location.reload()"
          class="p-2 hover:bg-white hover:shadow-md rounded-lg transition-all duration-300"
        >
          <svg
            class="w-5 h-5 text-orange-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
            />
          </svg>
        </button>
      </div>
    </div>

    <!-- Statistiques principales avec animations -->
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-8"
    >
      <!-- Utilisateurs -->
      <div class="transform hover:scale-105 transition-all duration-300">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden p-4 sm:p-6">
          <div class="relative">
            <div
              class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-orange-500/10 to-orange-600/10 rounded-full -mr-10 -mt-10"
            ></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-4">
                <div>
                  <p class="text-sm font-medium text-gray-600">Utilisateurs</p>
                  <p class="text-2xl sm:text-3xl font-bold text-gray-900">
                    <%= usersCount %>
                  </p>
                </div>
                <div class="bg-orange-100 p-2 sm:p-3 rounded-lg">
                  <svg
                    class="w-5 h-5 sm:w-6 sm:h-6 text-orange-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="flex items-center text-sm">
                <span
                  class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"
                >
                  <svg
                    class="w-3 h-3 mr-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
                    ></path>
                  </svg>
                  +<%= Math.round((recentActivities.recentUsers.length /
                  usersCount) * 100) %>% ce mois
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Recettes -->
      <div class="transform hover:scale-105 transition-all duration-300">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <div class="p-6 relative">
            <div
              class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-orange-400/10 to-orange-500/10 rounded-full -mr-10 -mt-10"
            ></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-4">
                <div>
                  <p class="text-sm font-medium text-gray-600">Recettes</p>
                  <p class="text-3xl font-bold text-gray-900">
                    <%= recipesCount %>
                  </p>
                </div>
                <div class="bg-orange-100 p-3 rounded-lg">
                  <svg
                    class="w-6 h-6 text-orange-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="flex items-center text-sm">
                <span
                  class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"
                >
                  <svg
                    class="w-3 h-3 mr-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
                    ></path>
                  </svg>
                  +<%= Math.round((recentActivities.recentRecipes.length /
                  recipesCount) * 100) %>% ce mois
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Films & Séries -->
      <div class="transform hover:scale-105 transition-all duration-300">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <div class="p-6 relative">
            <div
              class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-orange-300/10 to-orange-400/10 rounded-full -mr-10 -mt-10"
            ></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-4">
                <div>
                  <p class="text-sm font-medium text-gray-600">
                    Films & Séries
                  </p>
                  <p class="text-3xl font-bold text-gray-900">
                    <%= moviesCount %>
                  </p>
                </div>
                <div class="bg-orange-100 p-3 rounded-lg">
                  <svg
                    class="w-6 h-6 text-orange-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="flex items-center text-sm">
                <span
                  class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800"
                >
                  <%= Math.round(recipesCount / moviesCount) %> recettes/œuvre
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Commentaires -->
      <div class="transform hover:scale-105 transition-all duration-300">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <div class="p-6 relative">
            <div
              class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-orange-200/10 to-orange-300/10 rounded-full -mr-10 -mt-10"
            ></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-4">
                <div>
                  <p class="text-sm font-medium text-gray-600">Commentaires</p>
                  <p class="text-3xl font-bold text-gray-900">
                    <%= recentActivities.recentComments.length %>
                  </p>
                </div>
                <div class="bg-orange-100 p-3 rounded-lg">
                  <svg
                    class="w-6 h-6 text-orange-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="flex items-center text-sm">
                <span
                  class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800"
                >
                  Derniers 30 jours
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Activités récentes -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 sm:gap-6">
      <!-- Nouveaux utilisateurs -->
      <div
        class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300"
      >
        <div class="p-4 sm:p-6">
          <div class="flex items-center justify-between mb-4 sm:mb-6">
            <h3
              class="text-base sm:text-lg font-semibold text-gray-800 flex items-center"
            >
              <svg
                class="w-4 h-4 sm:w-5 sm:h-5 mr-2 text-orange-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
              Nouveaux utilisateurs
            </h3>
            <a
              href="/admin/utilisateur"
              class="text-orange-500 hover:text-orange-600 text-sm font-medium hover:underline"
            >
              Voir tout
            </a>
          </div>
          <div class="space-y-3 sm:space-y-4">
            <% recentActivities.recentUsers.forEach(user => { %>
            <div
              class="flex items-center justify-between p-2 sm:p-3 hover:bg-orange-50 rounded-lg transition-colors duration-150"
            >
              <div class="flex items-center">
                <div
                  class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-gradient-to-br from-orange-400 to-orange-600 flex items-center justify-center text-white font-medium shadow-sm"
                >
                  <%= user.nom_utilisateur.charAt(0).toUpperCase() %>
                </div>
                <div class="ml-3">
                  <span class="text-sm sm:text-base text-gray-800 font-medium"
                    ><%= user.nom_utilisateur %></span
                  >
                  <p class="text-xs text-gray-500">
                    <%= new Date(user.created_at).toLocaleDateString('fr-FR', {
                    day: 'numeric', month: 'long' }) %>
                  </p>
                </div>
              </div>
              <div class="bg-orange-100 px-2 py-1 rounded-full">
                <span class="text-xs text-orange-600 font-medium">Nouveau</span>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>

      <!-- Nouvelles recettes -->
      <div class="bg-white rounded-xl shadow-lg overflow-hidden p-4 sm:p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-base sm:text-lg font-semibold text-gray-800">
            Nouvelles recettes
          </h3>
          <a
            href="/admin/recette"
            class="text-orange-500 hover:text-orange-600 text-sm font-medium"
          >
            Voir tout
          </a>
        </div>
        <div class="space-y-3 sm:space-y-4">
          <% recentActivities.recentRecipes.forEach(recipe => { %>
          <div
            class="flex items-center justify-between p-2 sm:p-3 hover:bg-gray-50 rounded-lg transition-colors duration-150"
          >
            <div class="flex items-center">
              <div
                class="w-7 h-7 sm:w-8 sm:h-8 rounded-lg bg-orange-100 flex items-center justify-center text-orange-600"
              >
                <svg
                  class="w-3 h-3 sm:w-4 sm:h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                  ></path>
                </svg>
              </div>
              <span class="ml-3 text-sm sm:text-base text-gray-600"
                ><%= recipe.titre %></span
              >
            </div>
            <span class="text-xs sm:text-sm text-gray-400">
              <%= new Date(recipe.created_at).toLocaleDateString('fr-FR', { day:
              'numeric', month: 'short' }) %>
            </span>
          </div>
          <% }) %>
        </div>
      </div>

      <!-- Recettes à valider -->
      <div class="bg-white rounded-xl shadow-lg overflow-hidden p-4 sm:p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-base sm:text-lg font-semibold text-gray-800">
            Recettes à valider
          </h3>
          <a
            href="/admin/recette-moderation"
            class="text-orange-500 hover:text-orange-600 text-sm font-medium"
          >
            Voir tout
          </a>
        </div>
        <div class="space-y-3 sm:space-y-4">
          <% recipesToValidate.recipesToValidate.forEach(recipe => { %>
          <div
            class="flex items-center justify-between p-2 sm:p-3 hover:bg-gray-50 rounded-lg transition-colors duration-150"
          >
            <div class="flex items-center">
              <div
                class="w-7 h-7 sm:w-8 sm:h-8 rounded-lg bg-orange-100 flex items-center justify-center text-orange-600"
              >
                <svg
                  class="w-3 h-3 sm:w-4 sm:h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                  ></path>
                </svg>
              </div>
              <span class="ml-3 text-sm sm:text-base text-gray-600"
                ><%= recipe.titre %></span
              >
            </div>
            <span class="text-xs sm:text-sm text-gray-400">
              <%= new Date(recipe.created_at).toLocaleDateString('fr-FR', { day:
              'numeric', month: 'short' }) %>
            </span>
          </div>
          <% }) %>
        </div>
      </div>

      <!-- Derniers commentaires -->
      <div class="bg-white p-6 rounded-xl shadow-lg">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold text-gray-800">
            Derniers commentaires
          </h3>
          <button
            class="text-orange-500 hover:text-orange-600 text-sm font-medium"
          >
            Gérer
          </button>
        </div>
        <div class="space-y-4">
          <% if (recentActivities.recentComments &&
          recentActivities.recentComments.length > 0) { %> <%
          recentActivities.recentComments.forEach(comment => { %>
          <div
            class="p-3 hover:bg-gray-50 rounded-lg transition-colors duration-150"
          >
            <div class="flex items-center justify-between mb-2">
              <div class="flex items-center">
                <div
                  class="w-8 h-8 rounded-full bg-orange-100 flex items-center justify-center text-orange-600 font-medium"
                >
                  <%= comment.author ?
                  comment.author.nom_utilisateur.charAt(0).toUpperCase() : '?'
                  %>
                </div>
                <span class="ml-3 text-gray-900 font-medium">
                  <%= comment.author ? comment.author.nom_utilisateur :
                  'Utilisateur supprimé' %>
                </span>
              </div>
              <span class="text-sm text-gray-400">
                <%= new Date(comment.created_at).toLocaleDateString('fr-FR', {
                day: 'numeric', month: 'short' }) %>
              </span>
            </div>
            <p class="text-gray-600 text-sm ml-11">
              sur
              <span class="font-medium"
                ><%= comment.Recipe ? comment.Recipe.titre : 'Recette supprimée'
                %></span
              >
            </p>
          </div>
          <% }) %> <% } else { %>
          <div class="text-center py-8">
            <svg
              class="mx-auto h-12 w-12 text-gray-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
              />
            </svg>
            <p class="mt-2 text-sm text-gray-500">
              Aucun commentaire pour le moment
            </p>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- contentFor('script') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  // Configuration commune pour les graphiques
  const chartOptions = {
    responsive: true,
    maintainAspectRatio: false,
    scales: {
      y: {
        beginAtZero: true,
        grid: {
          color: "rgba(0, 0, 0, 0.1)",
        },
      },
      x: {
        grid: {
          display: false,
        },
      },
    },
    plugins: {
      legend: {
        display: false,
      },
    },
  };

  // Configuration du graphique des utilisateurs
  const userCtx = document.getElementById("userChart").getContext("2d");
  new Chart(userCtx, {
    type: "line",
    data: {
      labels: chartData.userStats.map((stat) =>
        new Date(stat.month).toLocaleDateString("fr-FR", {
          month: "short",
          year: "numeric",
        })
      ),
      datasets: [
        {
          label: "Nouveaux utilisateurs",
          data: chartData.userStats.map((stat) => stat.count),
          borderColor: "rgb(249, 115, 22)",
          backgroundColor: "rgba(249, 115, 22, 0.1)",
          tension: 0.4,
          fill: true,
        },
      ],
    },
    options: chartOptions,
  });

  // Configuration du graphique des recettes
  const recipeCtx = document.getElementById("recipeChart").getContext("2d");
  new Chart(recipeCtx, {
    type: "line",
    data: {
      labels: chartData.recipeStats.map((stat) =>
        new Date(stat.month).toLocaleDateString("fr-FR", {
          month: "short",
          year: "numeric",
        })
      ),
      datasets: [
        {
          label: "Nouvelles recettes",
          data: chartData.recipeStats.map((stat) => stat.count),
          borderColor: "rgb(249, 115, 22)",
          backgroundColor: "rgba(249, 115, 22, 0.1)",
          tension: 0.4,
          fill: true,
        },
      ],
    },
    options: chartOptions,
  });
</script>
