<!-- Gestion des utilisateurs (admin) --> 


<main class="bg-gray-100 flex flex-col items-center min-h-screen py-10">

    <h1 class="text-3xl font-bold text-orange-600 mb-6">Liste des utilisateurs</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 w-full max-w-6xl px-4">
        <% if (users.length > 0) { %>
            <% users.forEach((user, index) => { %>
                <div class="bg-white shadow-lg rounded-xl p-6 flex flex-col items-center">
                    <div class="w-16 h-16 bg-orange-500 text-white flex items-center justify-center text-xl font-bold rounded-full">
                        <%= user.nom_utilisateur.charAt(0).toUpperCase() %>
                    </div>
                    <h2 class="mt-4 text-lg font-semibold text-gray-700"><%= user.nom_utilisateur %></h2>
                    <h2 class="mt-4 text-lg font-semibold text-gray-700"><%= user.email %></h2>
                    <h2 class="mt-4 text-lg font-semibold text-gray-700">droits : <%= user.role %></h2>
                    <p class="text-gray-500 text-sm">Utilisateur #<%= index + 1 %></p>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-gray-500 text-lg col-span-full text-center">Aucun utilisateur trouvÃ©.</p>
        <% } %>
    </div>

    <div class="mt-6">
        <a href="/admin/tableau-de-bord" class="bg-orange-500 text-white px-4 py-2 rounded-lg hover:bg-orange-600">Retour au tableau de bord</a>
    </div>

</main>


