  <!-- Pagination -->
  <div class="mt-12 flex justify-center">
    <nav class="flex items-center space-x-2" aria-label="Pagination">
      <button
        id="prev-page"
        class="p-2 rounded-lg hover:bg-gray-100 transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"
          />
        </svg>
      </button>

      <div id="page-numbers" class="flex items-center space-x-2">
        <!-- Les numéros de page seront générés dynamiquement -->
      </div>

      <button
        id="next-page"
        class="p-2 rounded-lg hover:bg-gray-100 transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
