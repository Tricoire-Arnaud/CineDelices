<main class="container mx-auto px-4 py-8">
  <!-- En-tête du catalogue -->
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">
      Catalogue des Recettes
    </h1>
    <p class="text-lg text-gray-600 max-w-2xl mx-auto">
      Découvrez notre collection de recettes inspirées de vos films et séries
      préférés
    </p>
  </div>

  <!-- Filtres et recherche -->
  <div class="mb-8">
    <!-- Barre de recherche -->
    <form action="/catalogue" method="GET" class="mb-6">
      <div class="flex gap-4">
        <input
          type="text"
          name="queryRecipes"
          value="<%= currentQueryRecipes %>"
          placeholder="Rechercher une recette..."
          class="flex-1 p-3 border border-gray-300 rounded-lg"
        />
        <button
          type="submit"
          class="px-6 py-3 bg-orange-500 text-white rounded-lg hover:bg-orange-600"
        >
          Rechercher
        </button>
      </div>
    </form>

    <!-- Filtres par catégorie -->
    <div class="flex flex-wrap gap-3">
      <a
        href="/catalogue"
        class="px-4 py-2 rounded-full <%= !currentCategory ? 'bg-orange-500 text-white' : 'border border-gray-300 hover:border-orange-500' %>"
      >
        Tous
      </a>
      <% categories.forEach(category => { %>
      <a
        href="/catalogue?category=<%= category.id_categorie %>"
        class="px-4 py-2 rounded-full <%= currentCategory == category.id_categorie ? 'bg-orange-500 text-white' : 'border border-gray-300 hover:border-orange-500' %>"
      >
        <%= category.libelle %>
      </a>
      <% }) %>
    </div>

    <!-- Tri -->
    <div class="mt-4 flex gap-3">
      <a
        href="/catalogue?sort=recent<%= currentCategory ? '&category=' + currentCategory : '' %><%= currentQueryRecipes ? '&queryRecipes=' + currentQueryRecipes : '' %>"
        class="px-4 py-2 rounded-full <%= currentSort === 'recent' ? 'bg-orange-500 text-white' : 'border border-gray-300 hover:border-orange-500' %>"
      >
        Plus récent
      </a>
      <a
        href="/catalogue?sort=oldest<%= currentCategory ? '&category=' + currentCategory : '' %><%= currentQueryRecipes ? '&queryRecipes=' + currentQueryRecipes : '' %>"
        class="px-4 py-2 rounded-full <%= currentSort === 'oldest' ? 'bg-orange-500 text-white' : 'border border-gray-300 hover:border-orange-500' %>"
      >
        Plus ancien
      </a>
    </div>
  </div>

  <div>
    <% if (noResults) { %>
    <!-- on peut aussi mettre  && currentQueryRecipes.trim() !== "" -->
    <p>Aucun résultat pour "<%= currentQueryRecipes %>"</p>
    <div>
      <% recipes.forEach(function(recipe) { %>
      <div>
        <h3><%= recipe.titre %></h3>
        <p>Catégorie : <%= recipe.category.libelle %></p>
        <p>Type : <%= recipe.Movie.type %></p>
      </div>
      <% }) %>
    </div>
    <% } else { %>
    <!-- Grille des recettes -->
    <div
      id="recipes-container"
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
    >
      <% recipes.forEach((recipe, index) => { %>
      <article
        class="recipe-card bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden group"
        data-category="<%= recipe.category.libelle %>"
      >
        <div class="relative aspect-video overflow-hidden">
          <img
            src="/images/<%= recipe.image %>"
            alt="<%= recipe.titre %>"
            class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
          />
          <span
            class="absolute top-4 right-4 px-3 py-1 bg-black/50 text-white text-sm rounded-full backdrop-blur-sm"
          >
            <%= recipe.category.libelle %>
          </span>
        </div>

        <div class="p-6">
          <h3
            class="text-xl font-semibold mb-2 group-hover:text-orange-500 transition-colors duration-200"
          >
            <%= recipe.titre %>
          </h3>
          <p class="text-gray-600 text-sm mb-4 line-clamp-2">
            <%= recipe.description %>
          </p>

          <div
            class="flex items-center justify-between text-sm text-gray-500 mb-4"
          >
            <div class="flex items-center">
              <div class="flex">
                <% for(let i = 0; i < 5; i++) { %>
                <svg
                  class="w-4 h-4 <%= i < recipe.rating ? 'text-yellow-400' : 'text-gray-300' %>"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                  />
                </svg>
                <% } %>
              </div>
              <span class="ml-2">(<%= recipe.reviews %>)</span>
            </div>
            <div class="flex items-center">
              <svg
                class="w-4 h-4 mr-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
              <%= recipe.temps_preparation %> min
            </div>
          </div>

          <a
            href="/recette/<%= recipe.id_recette %>"
            class="block text-center py-3 px-4 bg-orange-500 text-white rounded-full hover:bg-orange-600 transition-all duration-300 transform hover:-translate-y-0.5"
          >
            Voir la recette
          </a>
        </div>
      </article>
      <% }) %>
    </div>
    <% } %>
  </div>

