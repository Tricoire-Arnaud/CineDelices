<!-- Profil utilisateur --> 

<%- include('../partials/header') %>
<div class=" pic-header-login relative bg-cover bg-center bg-no-repeat min-h-screen flex items-center justify-center"> <!-- Centrer le contenu -->
    <main class="container mx-auto px-4 py-8 max-w-7xl">
        <section class="shadow-md p-6 rounded-lg max-w-lg mx-auto">
          <h1 class="text-3xl font-bold text-orange-600 mb-8">Bonjour <%= user.nom_utilisateur %></h1>
      
          <form class="space-y-6">
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <label for="nom" class="block text-gray-700 mb-2">Nom</label>
                <input type="text" id="nom" class="w-full p-2 rounded-lg border border-orange-600" placeholder="Votre nom" required disabled value="<%= user.nom_utilisateur %>" />
              </div>
              <button type="button" class="ml-4 text-orange-400 hover:text-orange-600">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 3.487a1.875 1.875 0 112.652 2.652L7.5 18.153l-4.5 1 1-4.5 11.862-11.866z" />
                </svg>
              </button>
            </div>
      
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <label for="email" class="block text-gray-700 mb-2">Email</label>
                <input type="email" id="email" class="w-full p-2 rounded-lg border border-orange-600 bg-gray-100 cursor-not-allowed" placeholder="Votre email" required disabled value="<%= user.email %>" />
              </div>
            </div>
      
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <label for="password" class="block text-gray-700 mb-2">Mot de passe</label>
                <input type="password" id="password" class="w-full p-2 rounded-lg border border-orange-600" placeholder="Votre mot de passe" required disabled value="********" />
              </div>
              <button type="button" class="ml-4 text-orange-400 hover:text-orange-600">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 3.487a1.875 1.875 0 112.652 2.652L7.5 18.153l-4.5 1 1-4.5 11.862-11.866z" />
                </svg>
              </button>
            </div>
      
            <div class="flex justify-between items-center">
              <button type="submit" class="bg-orange-400 text-white px-4 py-2 rounded-lg hover:bg-orange-500">Enregistrer</button>
              <button type="button" class="px-4 py-2 text-red-600 border border-red-600 rounded-lg hover:bg-red-100">Supprimer mon compte</button>
            </div>
          </form>
        </section>
      </main>
      
      
      
</div>
<%- include('../partials/footer') %>