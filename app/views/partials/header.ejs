<!-- Messages Flash -->
<% if (locals.success && locals.success.length > 0) { %>
<div
  class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative"
  role="alert"
>
  <span class="block sm:inline"><%= success %></span>
</div>
<% } %> <% if (locals.error && locals.error.length > 0) { %>
<div
  class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative"
  role="alert"
>
  <span class="block sm:inline"><%= error %></span>
</div>
<% } %>

<header class="bg-white border-b shadow-sm">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo avec effet hover -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center group">
          <img
            class="h-16 sm:h-20 w-auto transform transition-transform group-hover:scale-105"
            src="/images/CineDelice_logo_280px.svg"
            alt="CinéDélices"
          />
        </a>
      </div>

      <!-- Menu principal -->
      <nav class="hidden lg:flex items-center space-x-12">
        <a
          href="/catalogue"
          class="text-gray-700 hover:text-orange-500 transition-all duration-200 font-medium relative after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-0 after:h-0.5 after:bg-orange-500 hover:after:w-full after:transition-all after:duration-300"
        >
          Catalogue
        </a>
        <a
          href="/films-series"
          class="text-gray-700 hover:text-orange-500 transition-all duration-200 font-medium relative after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-0 after:h-0.5 after:bg-orange-500 hover:after:w-full after:transition-all after:duration-300"
        >
          Films & Séries
        </a>

        <!-- Boutons de connexion -->
        <div class="flex items-center space-x-4">
          <% if (locals.user) { %>
          <span class="text-gray-700 mr-4"
            >Bienvenue <%= locals.user.username %></span
          >
          <a
            href="/auth/logout"
            class="inline-flex items-center justify-center px-6 py-2.5 border-2 border-orange-500 text-orange-500 rounded-full hover:bg-orange-50 transition-all duration-300 font-medium hover:shadow-md hover:-translate-y-0.5"
          >
            Déconnexion
          </a>
          <% if (locals.user.role === 'admin') { %>
          <a
            href="/admin/tableau-de-bord"
            class="inline-flex items-center justify-center px-6 py-2.5 bg-gradient-to-r from-orange-500 to-orange-600 text-white rounded-full hover:from-orange-600 hover:to-orange-700 transition-all duration-300 font-medium hover:shadow-md hover:-translate-y-0.5"
          >
            Admin
          </a>
          <% } %> <% } else { %>
          <a
            href="/auth/login"
            class="inline-flex items-center justify-center px-6 py-2.5 border-2 border-orange-500 text-orange-500 rounded-full hover:bg-orange-50 transition-all duration-300 font-medium hover:shadow-md hover:-translate-y-0.5"
          >
            Connexion
          </a>
          <a
            href="/auth/register"
            class="inline-flex items-center justify-center px-6 py-2.5 bg-gradient-to-r from-orange-500 to-orange-600 text-white rounded-full hover:from-orange-600 hover:to-orange-700 transition-all duration-300 font-medium hover:shadow-md hover:-translate-y-0.5"
          >
            Inscription
          </a>
          <% } %>
        </div>
      </nav>

      <!-- Menu mobile -->
      <div class="lg:hidden">
        <button
          id="menu-toggler"
          class="text-gray-500 hover:text-gray-600 focus:outline-none focus:text-gray-600"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>

    <!-- Menu mobile (caché par défaut) -->
    <div id="mobile-menu" class="hidden lg:hidden pb-6">
      <div class="space-y-4">
        <a
          href="/catalogue"
          class="block text-gray-700 hover:text-orange-500 transition-colors duration-200"
        >
          Catalogue
        </a>
        <a
          href="/films-series"
          class="block text-gray-700 hover:text-orange-500 transition-colors duration-200"
        >
          Films & Séries
        </a>

        <!-- Version mobile des boutons de connexion -->
        <div class="space-y-4 mt-6">
          <% if (locals.user) { %>
          <span class="block text-gray-700"
            >Bienvenue <%= locals.user.username %></span
          >
          <a
            href="/auth/logout"
            class="block w-full text-center px-6 py-3 border-2 border-orange-500 text-orange-500 rounded-full hover:bg-orange-50 transition-all duration-300 hover:shadow-md hover:-translate-y-0.5"
          >
            Déconnexion
          </a>
          <% if (locals.user.role === 'admin') { %>
          <a
            href="/admin/tableau-de-bord"
            class="block w-full text-center px-6 py-3 bg-gradient-to-r from-orange-500 to-orange-600 text-white rounded-full hover:from-orange-600 hover:to-orange-700 transition-all duration-300 hover:shadow-md hover:-translate-y-0.5"
          >
            Admin
          </a>
          <% } %> <% } else { %>
          <a
            href="/auth/login"
            class="block w-full text-center px-6 py-3 border-2 border-orange-500 text-orange-500 rounded-full hover:bg-orange-50 transition-all duration-300 hover:shadow-md hover:-translate-y-0.5"
          >
            Connexion
          </a>
          <a
            href="/auth/register"
            class="block w-full text-center px-6 py-3 bg-gradient-to-r from-orange-500 to-orange-600 text-white rounded-full hover:from-orange-600 hover:to-orange-700 transition-all duration-300 hover:shadow-md hover:-translate-y-0.5"
          >
            Inscription
          </a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // Script pour le menu mobile
  document
    .getElementById("menu-toggler")
    .addEventListener("click", function () {
      document.getElementById("mobile-menu").classList.toggle("hidden");
    });
</script>
