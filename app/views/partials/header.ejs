<!-- En-tête du site --> 

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CinéDélices</title>
    <link rel="stylesheet" href="CSS/reset.css">
    <link rel="stylesheet" href="CSS/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" type="image/svg+xml" src href="/images/CineDelice_favicons_32px.svg">

    <!-- Ajout de la police moderne -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-50 font-['Inter']">
    <header class="bg-white border-b shadow-sm">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-20">
                <!-- Logo avec effet hover -->
                <div class="flex-shrink-0">
                    <a href="/" class="flex items-center group">
                        <img class="h-16 sm:h-20 w-auto transform transition-transform group-hover:scale-105" 
                             src="/images/CineDelice_logo_280px.svg" 
                             alt="CinéDélices">
                    </a>
                </div>

                <!-- Navigation principale avec nouveaux styles -->
                <nav class="hidden lg:flex items-center space-x-12">
                    <a href="/catalogue" 
                       class="text-gray-700 hover:text-orange-500 transition-all duration-200 font-medium relative after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-0 after:h-0.5 after:bg-orange-500 hover:after:w-full after:transition-all after:duration-300">
                        Catalogue
                    </a>
                    <a href="/films-series" 
                       class="text-gray-700 hover:text-orange-500 transition-all duration-200 font-medium relative after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-0 after:h-0.5 after:bg-orange-500 hover:after:w-full after:transition-all after:duration-300">
                        Films & Séries
                    </a>
                    
                    <!-- Boutons de connexion/inscription avec effets améliorés -->
                    <div class="flex items-center space-x-4">
                        <a href="/connexion" 
                           class="inline-flex items-center justify-center px-6 py-2.5 border-2 border-orange-500 text-orange-500 rounded-full hover:bg-orange-50 transition-all duration-300 font-medium hover:shadow-md hover:-translate-y-0.5">
                            Connexion
                        </a>
                        <a href="/inscription" 
                           class="inline-flex items-center justify-center px-6 py-2.5 bg-gradient-to-r from-orange-500 to-orange-600 text-white rounded-full hover:from-orange-600 hover:to-orange-700 transition-all duration-300 font-medium hover:shadow-md hover:-translate-y-0.5">
                            Inscription
                        </a>
                    </div>
                </nav>

                <!-- Menu mobile amélioré -->
                <div class="lg:hidden">
                    <button id="menu-toggler" 
                            class="p-2 rounded-md text-gray-700 hover:bg-orange-50 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-orange-500">
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Menu mobile overlay avec animation -->
        <div id="menu-burger" 
             class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden backdrop-blur-sm transition-all duration-300">
            <div class="fixed inset-y-0 right-0 max-w-xs w-full bg-white shadow-xl transform transition-transform duration-300">
                <div class="flex justify-end p-6">
                    <button id="close-menu-burger" 
                            class="text-gray-600 hover:text-gray-900 transition-colors duration-200">
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
                
                <div class="px-6 py-4 space-y-6">
                    <a href="/catalogue" 
                       class="block text-lg font-medium text-gray-700 hover:text-orange-500 transition-colors duration-200 hover:translate-x-2 transform">
                        Catalogue
                    </a>
                    <a href="/films-series" 
                       class="block text-lg font-medium text-gray-700 hover:text-orange-500 transition-colors duration-200 hover:translate-x-2 transform">
                        Films & Séries
                    </a>
                    <div class="space-y-4 pt-6">
                        <a href="/connexion" 
                           class="block w-full text-center px-6 py-3 border-2 border-orange-500 text-orange-500 rounded-full hover:bg-orange-50 transition-all duration-300">
                            Connexion
                        </a>
                        <a href="/inscription" 
                           class="block w-full text-center px-6 py-3 bg-gradient-to-r from-orange-500 to-orange-600 text-white rounded-full hover:from-orange-600 hover:to-orange-700 transition-all duration-300">
                            Inscription
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <script>
    const menuBurger = document.getElementById('menu-burger');
    const menuContent = menuBurger.querySelector('div:nth-child(1)');

    document.getElementById('menu-toggler').addEventListener('click', () => {
        menuBurger.classList.remove('hidden');
        // Petit délai pour l'animation
        setTimeout(() => {
            menuContent.classList.add('translate-x-0');
            menuContent.classList.remove('translate-x-full');
        }, 10);
    });

    function closeMenu() {
        menuContent.classList.remove('translate-x-0');
        menuContent.classList.add('translate-x-full');
        setTimeout(() => {
            menuBurger.classList.add('hidden');
        }, 300);
    }

    document.getElementById('close-menu-burger').addEventListener('click', closeMenu);
    menuBurger.addEventListener('click', (e) => {
        if (e.target === menuBurger) {
            closeMenu();
        }
    });
    </script>
</body>
</html> 
                 