  <script>
    // Script pour changer dynamiquement l'URL de soumission selon le type de recherche
    document.getElementById('searchForm').addEventListener('submit', function(event) {
      const queryFilms = document.querySelector('input[name="queryFilms"]').value.trim();
      const queryRecipes = document.querySelector('input[name="queryRecipes"]').value.trim();
      const searchType = document.getElementById('searchType');
      
      // Déterminer le type de recherche
      if (queryFilms) {
        searchType.value = 'films-series';
        document.getElementById('searchLabelFilms').textContent = 'Films & Séries';
      } else if (queryRecipes) {
        searchType.value = 'catalogue';
        document.getElementById('searchLabelRecipes').textContent = 'Recettes';
      }
  
      // Modifier l'action du formulaire en fonction du type
      this.action = `/${searchType.value}`;
    });
  </script>


