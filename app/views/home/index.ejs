<main class="bg-gray-50">
  <!-- Hero Section -->
  <section class="relative isolate overflow-hidden">
    <div
      class="pic-header relative bg-cover bg-center bg-no-repeat min-h-screen flex items-center"
    >
      <!-- Overlay gradient -->
      <div
        class="absolute inset-0 bg-gradient-to-b from-black/30 to-black/10 backdrop-blur-[2px]"
      ></div>

      <!-- Contenu Hero -->
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h1
            class="text-4xl sm:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight"
          >
            La magie du cinéma dans votre assiette
          </h1>
          <p class="text-xl sm:text-2xl text-white/90 mb-8 font-medium">
            Découvrez et partagez des recettes légendaires inspirées de vos
            films et séries préférés
          </p>

          <!-- Formulaire de recherche -->
          <form id="searchForm" method="GET" class="mb-8">
            <div class="flex gap-4 items-center">
              <div class="flex-1">
                <input
                  type="text"
                  name="queryRecipes"
                  placeholder="Rechercher une recette..."
                  class="w-full p-4 rounded-full border border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-200 transition-all duration-200"
                />
              </div>
              <div class="flex-1">
                <input
                  type="text"
                  name="queryFilms"
                  placeholder="Rechercher un film ou une série..."
                  class="w-full p-4 rounded-full border border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-200 transition-all duration-200"
                />
              </div>
              <button
                type="submit"
                class="px-8 py-4 bg-orange-500 text-white rounded-full hover:bg-orange-600 transition-all duration-300"
              >
                Rechercher
              </button>
            </div>
          </form>

          <a
            href="#recipes"
            class="inline-flex items-center px-8 py-4 bg-orange-500 text-white rounded-full hover:bg-orange-600 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg font-medium text-lg"
          >
            Voir les recettes
            <svg
              class="w-5 h-5 ml-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"
              />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Comment ça fonctionne -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl sm:text-4xl font-bold text-center mb-16">
        Comment ça fonctionne
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <!-- Étape 1 -->
        <div class="relative group">
          <div
            class="absolute -inset-1 bg-gradient-to-r from-orange-500 to-orange-600 rounded-2xl blur opacity-25 group-hover:opacity-50 transition duration-300"
          ></div>
          <div class="relative bg-white p-6 rounded-2xl">
            <div
              class="w-12 h-12 flex items-center justify-center rounded-full bg-orange-500 text-white text-xl font-bold mb-6"
            >
              1
            </div>
            <h3 class="text-xl font-semibold mb-4">
              Sélectionnez une œuvre culte
            </h3>
            <p class="text-gray-600">
              Choisissez parmi notre collection de films et séries iconiques.
            </p>
          </div>
        </div>

        <!-- Étape 2 -->
        <div class="relative group">
          <div
            class="absolute -inset-1 bg-gradient-to-r from-orange-500 to-orange-600 rounded-2xl blur opacity-25 group-hover:opacity-50 transition duration-300"
          ></div>
          <div class="relative bg-white p-6 rounded-2xl">
            <div
              class="w-12 h-12 flex items-center justify-center rounded-full bg-orange-500 text-white text-xl font-bold mb-6"
            >
              2
            </div>
            <h3 class="text-xl font-semibold mb-4">
              Découvrez la recette associée
            </h3>
            <p class="text-gray-600">
              Explorez les recettes authentiques tirées de vos scènes préférées.
            </p>
          </div>
        </div>

        <!-- Étape 3 -->
        <div class="relative group">
          <div
            class="absolute -inset-1 bg-gradient-to-r from-orange-500 to-orange-600 rounded-2xl blur opacity-25 group-hover:opacity-50 transition duration-300"
          ></div>
          <div class="relative bg-white p-6 rounded-2xl">
            <div
              class="w-12 h-12 flex items-center justify-center rounded-full bg-orange-500 text-white text-xl font-bold mb-6"
            >
              3
            </div>
            <h3 class="text-xl font-semibold mb-4">Cuisinez comme au cinéma</h3>
            <p class="text-gray-600">
              Suivez nos instructions détaillées et devenez le chef de vos films
              préférés.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Catégories -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid gap-8 md:grid-cols-3">
        <!-- Recettes Cultes -->
        <div class="group relative overflow-hidden rounded-2xl">
          <img
            src="/images/butterbeer.jpg"
            alt="Recettes cultes"
            class="w-full h-80 object-cover transform group-hover:scale-105 transition-transform duration-500"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/80 to-black/0 flex items-end"
          >
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-2">Recettes Cultes</h3>
              <p class="text-white/80 text-sm">
                Revisitez les plats légendaires de films iconiques.
              </p>
            </div>
          </div>
        </div>

        <!-- Séries Gourmandes -->
        <div class="group relative overflow-hidden rounded-2xl">
          <img
            src="/images/cheese-cake.jpg"
            alt="Séries gourmandes"
            class="w-full h-80 object-cover transform group-hover:scale-105 transition-transform duration-500"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/80 to-black/0 flex items-end"
          >
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-2">
                Séries Gourmandes
              </h3>
              <p class="text-white/80 text-sm">
                Des recettes aussi captivantes que vos séries préférées.
              </p>
            </div>
          </div>
        </div>

        <!-- Desserts Fantastiques -->
        <div class="group relative overflow-hidden rounded-2xl">
          <img
            src="/images/simpsons_donuts_real.jpg"
            alt="Desserts fantastiques"
            class="w-full h-80 object-cover transform group-hover:scale-105 transition-transform duration-500"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/80 to-black/0 flex items-end"
          >
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-2">
                Desserts Fantastiques
              </h3>
              <p class="text-white/80 text-sm">
                Des douceurs sorties tout droit de mondes imaginaires.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Dernières Recettes -->
  <section class="py-20 bg-gray-50" id="recipes">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl sm:text-4xl font-bold text-center mb-16">
        Dernières Recettes
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% if (latestRecipes && latestRecipes.length > 0) { %> <%
        latestRecipes.forEach(recipe => { %>
        <article
          class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden group"
        >
          <div class="relative aspect-video overflow-hidden">
            <img
              src="/images/<%= recipe.image %>"
              alt="<%= recipe.titre %>"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
            />
            <span
              class="absolute top-4 right-4 px-3 py-1 bg-black/50 text-white text-sm rounded-full backdrop-blur-sm"
            >
              <%= recipe.category.libelle %>
            </span>
          </div>

          <div class="p-6">
            <h3
              class="text-xl font-semibold mb-2 group-hover:text-orange-500 transition-colors duration-200"
            >
              <%= recipe.titre %>
            </h3>
            <p class="text-gray-600 text-sm mb-4 line-clamp-2">
              <%= recipe.description %>
            </p>

            <div
              class="flex items-center justify-between text-sm text-gray-500 mb-4"
            >
              <div class="flex items-center">
                <div class="flex">
                  <% for(let i=0; i < 5; i++) { %>
                  <svg
                    class="w-4 h-4 <%= i < recipe.rating ? 'text-yellow-400' : 'text-gray-300' %>"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                    />
                  </svg>
                  <% } %>
                </div>
                <span class="ml-2">(<%= recipe.reviews %>)</span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-4 h-4 mr-1"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
                <%= recipe.temps_preparation %> min
              </div>
            </div>

            <a
              href="/recette/<%= recipe.id_recette %>"
              class="block text-center py-3 px-4 bg-orange-500 text-white rounded-full hover:bg-orange-600 transition-all duration-300 transform hover:-translate-y-0.5"
            >
              Voir la recette
            </a>
          </div>
        </article>
        <% }) %> <% } else { %>
        <p class="col-span-full text-center text-gray-500">
          Aucune recette disponible pour le moment.
        </p>
        <% } %>
      </div>
    </div>
  </section>
</main>

<!-- il faut commenter cette balise EJS car elle bloque le script -->
<%#- contentFor('script') %> 
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("searchForm");
    const filmsInput = document.querySelector('input[name="queryFilms"]');
    const recipesInput = document.querySelector('input[name="queryRecipes"]');

    form.addEventListener("submit", function (e) {
      e.preventDefault();

      // Récupérer les valeurs nettoyées
      const filmsQuery = filmsInput.value.trim();
      const recipesQuery = recipesInput.value.trim();

      // Rediriger vers la page appropriée en fonction de la recherche
      if (filmsQuery && !recipesQuery) {
        // Si recherche de films/séries
        window.location.href = `/films-series?queryFilms=${encodeURIComponent(
          filmsQuery
        )}`;
      } else if (recipesQuery && !filmsQuery) {
        // Si recherche de recettes
        window.location.href = `/catalogue?queryRecipes=${encodeURIComponent(
          recipesQuery
        )}`;
      } else if (filmsQuery && recipesQuery) {
        // Si les deux champs sont remplis, prioriser la recherche de recettes
        window.location.href = `/catalogue?queryRecipes=${encodeURIComponent(
          recipesQuery
        )}`;
      }
    });

    // Amélioration de la gestion des champs
    filmsInput.addEventListener("input", function () {
      if (this.value.trim().length > 0) {
        recipesInput.value = "";
        recipesInput.setAttribute("disabled", "disabled");
      } else {
        recipesInput.removeAttribute("disabled");
      }
    });

    recipesInput.addEventListener("input", function () {
      if (this.value.trim().length > 0) {
        filmsInput.value = "";
        filmsInput.setAttribute("disabled", "disabled");
      } else {
        filmsInput.removeAttribute("disabled");
      }
    });
  });
</script>
