<section class="py-12 bg-white">
  <div class="container mx-auto px-4">
    <!-- Formulaire unique -->
    <form id="searchForm" method="get" class="space-y-4">
      <div class="hidden md:flex max-w-4xl mx-auto bg-white rounded-2xl shadow-lg p-6 space-x-4 -mt-24 relative z-20">
        <!-- Input de recherche Films & Séries -->
        <div class="flex-1">
          <label class="block text-sm font-medium text-gray-700 mb-2" id="searchLabelFilms">Films & Séries</label>
          <div class="relative">
            <input type="text" name="queryFilms" placeholder="Rechercher un film ou une série..." 
                   class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-orange-500 focus:ring-2 focus:ring-orange-200 transition-all duration-200">
            <span class="absolute left-3 top-1/2 -translate-y-1/2">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </span>
          </div>
        </div>

        <!-- Input de recherche Recettes -->
        <div class="flex-1">
          <label class="block text-sm font-medium text-gray-700 mb-2" id="searchLabelRecipes">Recettes</label>
          <div class="relative">
            <input type="text" name="queryRecipes" placeholder="Rechercher une recette..." 
                   class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-orange-500 focus:ring-2 focus:ring-orange-200 transition-all duration-200">
            <span class="absolute left-3 top-1/2 -translate-y-1/2">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </span>
          </div>
        </div>
        
        <!-- Bouton de soumission -->
        <div class="flex items-end">
          <button type="submit" class="px-8 py-3 bg-orange-500 text-white rounded-xl hover:bg-orange-600 transition-all duration-200">
            Rechercher
          </button>
        </div>
      </div>

      <!-- Mobile Search -->
      <div class="md:hidden space-y-4 px-4">
        <!-- Mobile input de recherche Films & Séries -->
        <input type="text" name="queryFilms" placeholder="Rechercher un film ou une série..." 
               class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
        <!-- Mobile input de recherche Recettes -->
        <input type="text" name="queryRecipes" placeholder="Rechercher une recette..." 
               class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
        <button type="submit" class="w-full py-3 bg-orange-500 text-white rounded-xl hover:bg-orange-600 transition-all duration-200">
          Rechercher
        </button>
      </div>

      <!-- Champ caché pour déterminer l'URL de soumission -->
      <input type="hidden" name="type" id="searchType" value="films-series">
    </form>
  </div>
</section>

   
